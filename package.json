{
  "name": "quick-commerce",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:mobile": "pnpm --filter mobile dev",
    "dev:api": "pnpm --filter api dev",
    "dev:storybook": "pnpm --filter design-system storybook",
    "dev:storybook:native": "pnpm --filter design-system storybook:native",
    "build:mobile": "pnpm --filter mobile build",
    "build:api": "pnpm --filter api build",
    "build:design-system": "pnpm --filter design-system build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter api db:generate",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:seed": "pnpm --filter api db:seed"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "prettier": "^3.2.0",
    "eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
