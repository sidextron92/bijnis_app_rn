{
  "name": "design-system",
  "version": "1.0.0",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "storybook": "storybook dev -p 6006 -c storybook/web/.storybook",
    "storybook:build": "storybook build -c storybook/web/.storybook -o storybook-static",
    "storybook:native": "expo start --config storybook/native/app.json",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist node_modules storybook-static"
  },
  "dependencies": {
    "@squircle-js/react": "^1.2.18",
    "react-feather": "^2.0.10"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^8.6.14",
    "@storybook/addon-docs": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@types/react": "~18.2.0",
    "@types/react-native": "~0.73.0",
    "storybook": "^8.6.14",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0"
  }
}
